enum MeetingStatus {
    NOT_STARTED
    STARTED
    ENDED
}

model Room {
    id            String        @id @default(cuid())
    name          String
    roomCode      String        @unique
    roomPassword  String?
    meetingStatus MeetingStatus @default(NOT_STARTED)
    startedAt     DateTime?
    endedAt       DateTime?
    createdAt     DateTime      @default(now())
    updatedAt     DateTime      @updatedAt

    UserRoom UserRoom[]
}
